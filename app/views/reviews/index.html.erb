<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
  <tr>
    <th>Rating</th>
    <th>Comment</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @reviews.each do |review| %>
    <tr>
      <td><%= review.rating %></td>
      <td><%= review.comment %></td>
      <td><%= link_to 'Show', product_review_path(review.product, review) %></td>
      <td><%= link_to 'Edit', edit_product_review_path(review.product, review) %></td>
      <td><%= link_to 'Destroy', product_review_path(review.product, review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', product_path(@product) %> |
<%= link_to 'New Review', new_product_review_path %>
